                            <tr>
                                <th>Matricule</th>
                                <th>Nom et Prénom(s)</th>
                                <th>Téléphone</th>
                                <th>E-mail</th>
                                <th>Naissance</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for liste_etudiant in liste_etudiants %}
