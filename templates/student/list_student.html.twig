    {{ encore_entry_link_tags('import_student') }}
        <div id="import_student">
            <importstudent></importstudent>
        </div>

        <div class="table-twig">
            <p class="align-center">LISTE DES ETUDIANTS</p>
            <div style="margin-left: 20px;">
                <p> Annee-Universitaire : {{ AuD }} - {{ AuF }} </p>
                </p> Niveau : {{ Niveau }} </p>
                </p> Parcours : {{ Parcours }} </p>
                {% if Groupe != null %}
                    </p> Groupe : {{ Groupe }} </p>
                {% endif %}
            </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                  <div class="tile-body">
                    <table class="table table-bordered table-hover" id="sampleTable">
